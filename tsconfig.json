{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": [
      "es2015",
      "esnext"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": true,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*"
  ]
}